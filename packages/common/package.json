{
    "name": "@lightdash/common",
    "version": "0.325.0",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "license": "MIT",
    "devDependencies": {
        "@redocly/openapi-cli": "^1.0.0-beta.54",
        "@types/pegjs": "^0.10.3",
        "@types/lodash-es": "^4.17.6",
        "typescript-json-schema": "^0.54.0"
    },
    "dependencies": {
        "@casl/ability": "^5.4.3",
        "dependency-graph": "^0.11.0",
